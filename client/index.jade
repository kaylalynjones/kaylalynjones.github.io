    //script(src='vendor/fixed-responsive-nav.js')
    script(src='public/index.js')
    script(src='public/views/games/games.js')
    script(src='public/views/node/node.js')
    script(src='public/views/mean/mean.js')
    script(src='public/views/mobile/mobile.js')

      
